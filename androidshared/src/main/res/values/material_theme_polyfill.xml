<?xml version="1.0" encoding="utf-8"?>

<!--
    This file is for a Theme Overlay for Material Components that fixes colorPrimary
    and colorSurface both being white. We should be able to remove this when we have
    a proper colorPrimary.
-->

<resources>

    <!-- Fixes problems with colors when colorPrimary and colorSurface match for the theme -->
    <style name="Theme.AndroidShared.MaterialComponents.MatchingPrimarySurfacePolyfill" parent="">
        <item name="colorPrimary">?attr/colorOnSurface</item>
        <item name="boxStrokeColor">?colorOnSurface</item>
        <item name="hintTextColor">?colorOnSurface</item>
    </style>

</resources>
