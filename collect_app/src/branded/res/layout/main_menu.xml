<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Toolbar -->
    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_menu_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingTop="6dp"
            android:text="@string/app_name"
            android:textColor="?primaryTextColor"
            android:textSize="21sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="1dp"
            android:text="@string/main_menu_details"
            android:textColor="?primaryTextColor"
            android:textSize="17sp"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/enter_data"
                        style="@style/ListButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:minHeight="80dp"
                        android:padding="20dp"
                        android:textAllCaps="false"
                        android:textSize="21sp" />
                </RelativeLayout>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/review_data"
                        style="@style/ListButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:minHeight="80dp"
                        android:padding="20dp"
                        android:textAllCaps="false"
                        android:textSize="21sp" />

                    <TextView
                        android:id="@+id/text_review_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/review_data"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/badge_circle"
                        android:elevation="3dp"
                        android:minWidth="30dp"
                        android:textAlignment="center"
                        android:textColor="#585757"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:translationZ="5dp"
                        tools:text="1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/view_sent_forms"
                        style="@style/ListButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:minHeight="80dp"
                        android:padding="20dp"
                        android:text="@string/view_sent_forms"
                        android:textAllCaps="false"
                        android:textSize="21sp" />

                    <TextView
                        android:id="@+id/text_view_sent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/view_sent_forms"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/badge_circle"
                        android:elevation="3dp"
                        android:minWidth="30dp"
                        android:textAlignment="center"
                        android:textColor="#585757"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:translationZ="5dp"
                        tools:text="10" />
                </RelativeLayout>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/send_data"
                        style="@style/ListButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:minHeight="80dp"
                        android:padding="20dp"
                        android:textAllCaps="false"
                        android:textSize="21sp" />

                    <TextView
                        android:id="@+id/text_send_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/send_data"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/badge_circle"
                        android:elevation="3dp"
                        android:minWidth="30dp"
                        android:textAlignment="center"
                        android:textColor="#585757"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:translationZ="5dp"
                        tools:text="10" />
                </RelativeLayout>

                <!--<RelativeLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content">-->

                <!--<Button-->
                <!--android:id="@+id/get_forms"-->
                <!--style="@style/ListButton"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="start|center"-->
                <!--android:minHeight="80dp"-->
                <!--android:padding="20dp"-->
                <!--android:textAllCaps="false"-->
                <!--android:textSize="21sp" />-->
                <!--</RelativeLayout>-->

                <!--<Button-->
                <!--android:id="@+id/manage_forms"-->
                <!--style="@style/ListButton"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="start|center"-->
                <!--android:minHeight="80dp"-->
                <!--android:padding="20dp"-->
                <!--android:textAllCaps="false"-->
                <!--android:textSize="21sp" />-->
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textVersionExpiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:ellipsize="none"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="12dp"
            android:visibility="gone"
            tools:ignore="SpUsage"
            tools:text="Version expires: 15 Jan 2018"
            tools:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDiagnostics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/textDiagnostics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/text_margin_bottom"
            android:layout_marginStart="16dp"
            android:ellipsize="none"
            android:gravity="start"
            android:singleLine="true"
            android:text="@string/diagnostics"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#2a01a2bc"
            android:textSize="46dp"
            tools:ignore="SpUsage" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabDisableDiagnostics"
            style="@style/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textDiagnostics"
            android:layout_alignParentEnd="true"
            android:onClick="onDisableDiagnosticsClick"
            app:srcCompat="@drawable/ic_revert_24dp"
            app:backgroundTint="@color/diagnostic"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
</RelativeLayout>